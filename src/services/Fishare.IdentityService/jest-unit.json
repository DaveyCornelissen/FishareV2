{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "roots": [
    "<rootDir>/test/unittests/"
  ],
  "testEnvironment": "node",
  "testRegex": ".spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "modulePaths": [
    "<rootDir>"
  ],
  "moduleDirectories": ["node_modules", "src"]
}